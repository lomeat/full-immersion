                                        <flagDependency flag="Both" value="Y"/>
                                </dependencies>
                                <files>
                                        <file source="Arbitration - Reload and Walk Speed.esp" destination="Arbitration - Reload and Walk Speed.esp"/>
                                        <file source="Arbitration - Speed Uninstaller (Remove This and Save).esp" destination="Arbitration - Speed Uninstaller (Remove This and Save).esp"/>
                                </files>
                        </pattern>
                </patterns>
        </conditionalFileInstalls>
 
</config>